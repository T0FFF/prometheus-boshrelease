# Alert: Uptime
ALERT MySQLUptime
  IF (mysql_global_status_uptime < 3600)
  LABELS {
    service = "mysql",
    severity = "warning"
  }
  ANNOTATIONS {
    summary = "MySQL seems to have restarted",
    description = "{{$labels.bosh_deployment}} / {{$labels.job}} on {{$labels.instance}} MySQL restarted, with an uptime of : {{$value}}s",
}
